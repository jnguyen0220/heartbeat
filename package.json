{
	"name": "heartbeat",
	"version": "0.0.1",
	"private": true,
	"main": "./server/index.js",
	"scripts": {
		"dev": "vite dev",
		"build": "npm install --unsafe-perm && vite build",
		"preview": "vite preview",
		"start": "node ./server/index.js",
		"prepare": "npm run smui-theme-light && npm run smui-theme-dark",
		"smui-theme-light": "smui-theme compile static/smui.css -i src/theme",
		"smui-theme-dark": "smui-theme compile static/smui-dark.css -i src/theme/dark",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@smui/button": "^7.0.0-beta.0",
		"@smui/card": "^7.0.0-beta.0",
		"@smui/icon-button": "^7.0.0-beta.0",
		"@smui/layout-grid": "^7.0.0-beta.0",
		"@smui/top-app-bar": "^7.0.0-beta.0",
		"@sveltejs/adapter-auto": "^1.0.0",
		"@sveltejs/adapter-node": "^1.0.0",
		"@sveltejs/kit": "^1.0.0",
		"@types/express": "^4.17.15",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"smui-theme": "^7.0.0-beta.0",
		"svelte": "^3.54.0",
		"svelte-check": "^2.9.2",
		"tslib": "^2.4.1",
		"typescript": "^4.9.3",
		"vite": "^4.0.0"
	},
	"type": "module",
	"dependencies": {
		"@ladjs/graceful": "^3.2.1",
		"ag-grid-community": "^28.2.1",
		"bree": "^9.1.3",
		"date-fns": "^2.29.3",
		"express": "^4.18.2",
		"got": "^12.5.3",
		"lowdb": "^5.0.5",
		"socket.io": "^4.5.4",
		"socket.io-client": "^4.5.4",
		"uWebSockets.js": "github:uNetworking/uWebSockets.js#v20.4.0"
	}
}
